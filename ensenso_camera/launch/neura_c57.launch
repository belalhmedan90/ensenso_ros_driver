<!-- Open both an Ensenso stereo camera and a mono camera within the same
nodelet manager. -->

<launch>
    <arg name="serial_stereo" doc="Serial of the stereo camera (default: first found stereo camera)" default="233076" />
    <arg name="serial_mono" doc="Serial of the mono camera (default: first found mono camera)" default="233076-Color" />
    <arg name="settings_stereo" doc="JSON file with stereo camera parameters" default="$(find ensenso_camera)/config/c_57_6_S_stereo_params.json" />
    <arg name="settings_mono" doc="JSON file with mono camera parameters" default="$(find ensenso_camera)/config/c_57_6_S_mono_params.json" />
    <arg name="stereo_ns" doc="Namespace of the stereo camera" default="stereo" />
    <arg name="mono_ns" doc="Namespace of the mono camera" default="mono" />
    <arg name="camera_frame" doc="The stereo camera's tf frame (default: optical_frame_SERIAL_STEREO)" default="" />
    <arg name="link_frame" doc="The stereo camera's link tf frame (default: camera_frame)" default="optical_frame_233076" />
    <arg name="target_frame" doc="The tf frame the data will be returned in (default: camera_frame)" default="" />
    <arg name="tcp_port" doc="The TCP port to open on the NxLib (-1=off, 0=autoSelect, >0=portNumber)" default="25000" />
    <arg name="threads" doc="The number of threads used by the NxLib for this node (-1=autoDetect)" default="-1" />
    <arg name="wait_for_camera" doc="Whether this node should wait for the camera to become available" default="false" />
    <arg name="node_name_stereo" doc="Node name of the stereo camera" default="$(arg serial_stereo)" />
    <arg name="node_name_mono" doc="Node name of the mono camera" default="233076_Color" />
    <arg name="mono_capture_timeout" doc="Capture timeout of the mono camera" default="2000" />

    <node pkg="nodelet" type="nodelet" name="manager_" args="manager" output="screen" />

    <node pkg="nodelet" type="nodelet" name="Ensenso_$(arg node_name_stereo)" ns="$(arg stereo_ns)" args="load ensenso_camera/stereo_camera_node /manager_" output="screen">
        <param name="serial" type="string" value="$(arg serial_stereo)" />
        <param name="settings" type="string" value="$(arg settings_stereo)" />
        <param name="camera_frame" type="string" value="$(arg camera_frame)" />
        <param name="link_frame" type="string" value="$(arg link_frame)" />
        <param name="target_frame" type="string" value="$(arg target_frame)" />
        <param name="tcp_port" type="int" value="$(arg tcp_port)" />
        <param name="threads" type="int" value="$(arg threads)" />
        <param name="wait_for_camera" type="bool" value="$(arg wait_for_camera)" />
    </node>

    <node pkg="nodelet" type="nodelet" name="Ensenso_$(arg node_name_mono)" ns="$(arg mono_ns)" args="load ensenso_camera/mono_camera_node /manager_" output="screen">
        <param name="serial" type="string" value="$(arg serial_mono)" />
        <param name="settings" type="string" value="$(arg settings_mono)" />
        <param name="link_frame" type="string" value="$(arg link_frame)" />
        <param name="wait_for_camera" type="bool" value="$(arg wait_for_camera)" />
        <param name="capture_timeout" type="int" value="$(arg mono_capture_timeout)" />
    </node>

    <node pkg="ensenso_camera" type="request_data_linked" name="Ensenso_request_data_linked">
        <param name="stereo_ns" type="string" value="$(arg stereo_ns)" />
        <param name="mono_ns" type="string" value="$(arg mono_ns)" />
    </node>

    <node pkg="nodelet" type="nodelet" name="DIP_Register" args="load depth_image_proc/register /manager_" output="screen">
        <!-- Inputs.  -->
        <remap from="rgb/camera_info" to="mono/rectified/camera_info" />
        <remap from="depth/camera_info" to="stereo/depth/camera_info" />
        <remap from="depth/image_rect" to="stereo/depth/image" />
        <!-- Outputs. -->
        <remap from="stereo/depth/image" to="/camera/aligned_depth_to_color/image_raw" />
        <remap from="depth_registered/camera_info" to="/camera/aligned_depth_to_color/camera_info" />
        <remap from="/mono/rectified/image" to="mono/depth/image" />

        <!-- Parameters. -->
        <param name="queue_size" type="int" value="5" />
    </node>
</launch>